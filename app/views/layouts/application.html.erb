<!DOCTYPE html>
<html>
  <head>
    <title>BikeShare</title>
    <%= csrf_meta_tags %>
    <!-- Required meta tags -->

<!-- Bootstrap CSS -->
  <%= stylesheet_link_tag "application", media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <!-- BOOTSTRAP -->
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"> </script>
  </head>

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <%= link_to "BikeShare", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Stations", stations_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Trips", trips_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Conditions", conditions_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Bike Accessories", bike_store_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Cart", cart_path, class: "nav-link" %>
        </li>
        <% unless current_user %>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign In", login_path, class: "nav-link" %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "Logged in as: #{current_user.username}", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log Out", logout_path, class: "nav-link" %>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <body>

    <% flash.each do |type, message| %>
      <%= content_tag :div, message.html_safe, class: type %>
    <% end %>

    <%= yield %>
    <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
